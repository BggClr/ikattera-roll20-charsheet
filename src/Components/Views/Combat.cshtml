@using Components.ViewModels
@model Models.CharacterManifest
@{
	const int CombatWeaponsCount = 5;
}
<div class="sheet-combat sheet-tab">
	<div class="row">
		<div class="col-6">
			<div class="fancy-border">
				@foreach (var combatWeapon in Enumerable.Range(1, CombatWeaponsCount).Select(p => new CombatWeapon { Index = p, Manifest = Model, Last = p == CombatWeaponsCount - 1}))
				{
					@await Html.PartialAsync("~/Views/CombatWeapon.cshtml", combatWeapon)
				}
			</div>
		</div>
		<div class="col-6">
			<div class="fancy-border">
				<div>
                	<div class="input-group mb-2">
                		<span class="input-group-text" data-i18n="hp">HP</span>
                		<input type="number" name="attr_hp" class="form-control"/>
                		<span name="attr_hp_max" class="form-control" readonly></span>
                		<button type="button" class='js-roll-potion heal-small btn btn-outline-danger' data-dice="1d4" data-name="hp" data-title="potion_hp_s"><i class="btn-icon">&#xf06c</i></button>
                		<button type="button" class='js-roll-potion heal-medium btn btn-outline-danger' data-dice="1d8" data-name="hp" data-title="potion_hp_ÑŒ"><i class="btn-icon">&#xf0c3</i></button>
                		<button type="button" class='js-roll-potion heal-large btn btn-outline-danger' data-dice="1d12" data-name="hp" data-title="potion_hp_l"><i class="btn-icon">&#xe4f3</i></button>
                		<button type="button" class='js-roll-potion heal-giant btn btn-outline-danger' data-dice="1d16" data-name="hp" data-title="potion_hp_xl"><i class="btn-icon">&#xf0f9</i></button>
                	</div>
                	<div class="progress">
                		<div class="progress-bar bg-danger js-hp" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                	</div>
                </div>
                <div>
                	<div class="input-group mb-2">
                		<span class="input-group-text" data-i18n="stamina">Stamina</span>
                		<input type="number" name="attr_stamina" class="form-control"/>
                		<span name="attr_stamina_max" class="form-control" readonly></span>
                		<button type="button" class='js-roll-potion restore-small btn btn-outline-info' data-dice="1d4" data-name="stamina" data-title="potion_stamina_s"><i class="btn-icon">&#xf06c</i></button>
                		<button type="button" class='js-roll-potion restore-medium btn btn-outline-info' data-dice="1d8" data-name="stamina" data-title="potion_stamina_m"><i class="btn-icon">&#xf0c3</i></button>
                		<button type="button" class='js-roll-potion restore-large btn btn-outline-info' data-dice="1d12" data-name="stamina "data-title="potion_stamina_l"><i class="btn-icon">&#xe4f3</i></button>
                		<button type="button" class='js-roll-potion restore-giant btn btn-outline-info' data-dice="1d16" data-name="stamina" data-title="potion_stamina_xl"><i class="btn-icon">&#xf0f9</i></button>
                	</div>
                	<div class="progress">
                		<div class="progress-bar bg-info js-stamina" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                	</div>
                </div>
                <hr/>
                <div class="input-group mb-2">
                	<span class="input-group-text" data-i18n="armor_head">Armor - Head</span>
                	<input type="number" name="attr_armor_head" class="form-control" />
                </div>
                <div class="input-group mb-2">
                	<span class="input-group-text" data-i18n="armor_body">Armor - Body</span>
                	<input type="number" name="attr_armor_body" class="form-control" />
                </div>
                <div class="input-group mb-2">
                	<span class="input-group-text" data-i18n="armor_hands">Armor - Hands</span>
                	<input type="number" name="attr_armor_arms" class="form-control" />
                </div>
                <div class="input-group mb-2">
                	<span class="input-group-text" data-i18n="armor_legs">Armor - Legs</span>
                	<input type="number" name="attr_armor_legs" class="form-control" />
                </div>
			</div>
		</div>
	</div>
</div>

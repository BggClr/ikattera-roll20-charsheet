@using Components.ViewModels
@model Models.CharacterManifest
@{
	const int CombatWeaponsCount = 5;
}
<div class="sheet-combat">
	<div class="row">
		<div class="col-6">
			@foreach (var combatWeapon in Enumerable.Range(1, CombatWeaponsCount).Select(p => new CombatWeapon { Index = p, Manifest = Model }))
			{
				@await Html.PartialAsync("~/Views/CombatWeapon.cshtml", combatWeapon)
			}
		</div>
		<div class="col-4">
			<div>
				<div class="input-group mb-2">
                	<span class="input-group-text">Здоровье</span>
                	<input type="number" name="attr_hp" class="form-control"/>
                	<span name="attr_hp_max" class="form-control" readonly></span>
					<button type="button" class='js-heal heal heal-small btn btn-outline-danger' data-name="1d4"><i class="btn-icon">&#xf06c</i></button>
					<button type="button" class='js-heal heal heal-medium btn btn-outline-danger' data-name="1d8"><i class="btn-icon">&#xf0c3</i></button>
					<button type="button" class='js-heal heal heal-large btn btn-outline-danger' data-name="1d12"><i class="btn-icon">&#xe4f3</i></button>
					<button type="button" class='js-heal heal heal-giant btn btn-outline-danger' data-name="1d16"><i class="btn-icon">&#xf0f9</i></button>
                </div>
				<div class="progress">
					<div class="progress-bar bg-danger js-hp" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
			</div>
			<div>
				<div class="input-group mb-2">
                    <span class="input-group-text">Усталость</span>
					<input type="number" name="attr_stamina" class="form-control"/>
					<span name="attr_stamina_max" class="form-control" readonly></span>
					<button type="button" class='js-restore restore restore-small btn btn-outline-info' data-name="1d4"><i class="btn-icon">&#xf06c</i></button>
					<button type="button" class='js-restore restore restore-medium btn btn-outline-info' data-name="1d8"><i class="btn-icon">&#xf0c3</i></button>
					<button type="button" class='js-restore restore restore-large btn btn-outline-info' data-name="1d12"><i class="btn-icon">&#xe4f3</i></button>
					<button type="button" class='js-restore restore restore-giant btn btn-outline-info' data-name="1d16"><i class="btn-icon">&#xf0f9</i></button>
                </div>
				<div class="progress">
					<div class="progress-bar bg-info js-stamina" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
			</div>
		</div>
	</div>
</div>
